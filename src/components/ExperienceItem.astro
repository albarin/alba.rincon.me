---
import Link from "./Link.astro";

interface Props {
	title: string;
	company: string;
	link: string;
	items: string[];
	date: string;
}

const { title, company, items, link, date } = Astro.props;
---

<div
	class="relative mx-12 py-2 before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:content-[''] before:border-accent/20 md:gap-2 md:space-x-4"
>
	<div class="relative pb-4 md:col-span-2">
		<div class="sticky top-2">
			<span class="absolute -left-[42px] rounded-full text-5xl text-accent">
				&bull;
			</span>

			<div class="space-y-1">
				<h3 class="text-xl font-semibold text-accent">
					{title}
				</h3>
				<div>
					<h4 class="text-xl font-semibold">
						<Link href={link}>{company}</Link>
					</h4>
					<time class="m-0 p-0 text-base-content/50">
						{date}
					</time>
				</div>
			</div>
		</div>
	</div>
	<div class="flex flex-col gap-2 pb-4">
		<ul class="list-disc space-y-2 text-base-content/90">
			{items.map((item) => <li class="text-pretty">{item}</li>)}
		</ul>
	</div>
</div>
